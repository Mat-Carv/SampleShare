<div class="row">
        
    <% @packs.each do |pack|%>
        <% if pack[:available] == true %>
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= pack.name %></h5>
                        <h6 class="card-subtitle"><%= @category.find(pack.category_id).name %></h6>
                        <p class="card-text"><%= pack.description %></p>
                        <%= link_to 'Details', pack_path(pack), method: :get, class:"btn btn-primary" %>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>

</div>