<%= simple_form_for @pack do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :description %>
  <%= f.association :category, required: true %>
  <%= f.input :price, required: true %>
  <%# f.input :image %>
  <%= f.input :image, as: :file %>
  <%= f.input :available %>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>

<% if current_user.packs.include? @pack %> 
    <%= link_to 'Delete Pack', delete_pack_path, method: :delete, class:"btn btn-primary", data: { confirm: "Are you sure you want to remove the listing?"}  %>
<% end %>