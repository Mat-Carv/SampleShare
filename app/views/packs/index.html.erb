<div class="container">
    <h2>My Packs</h2>

    <%# Card listing for the current user's created packs %>
    <div class="row">
    
        <% @my_packs.each do |pack|%>
            <div class="col-md-3">
                <%# class="card-img-top" alt="..." %>
                <div class="card bg-secondary text-white mb-3" style="width: 100%;">

                    <% if pack.image.attached? %>
                        <%= image_tag(pack.image)  %>
                    <% else %>
                        <%= image_tag "cover1.jpeg", alt: "Placeholder" %>                       
                    <% end %>

                    <div class="card-body">
                        <h5 class="card-title"><%= pack.name %></h5>
                        <h6 class="card-subtitle"><%= @category.find(pack.category_id).name %></h6>
                        <p class="card-text"><%= pack.description %></p>
                        <%= link_to 'Details', pack_path(pack), method: :get, class:"btn btn-light" %>
                    </div>
                </div>
            </div>
        <% end %>

    </div><br>
    <%= link_to 'Create New Sample Pack', new_pack_path, method: :get, class: "btn btn-primary" %>
</div>


<div class="container">
    <hr class="my-3">
    <h2>Purchased Packs</h2>
    <br>
    <%# Card listing for the current user's purchased packs %>
    <div class="row">
            
        <% @purchased.each do |pack|%>
            <div class="col-md-3">
                <div class="card bg-secondary text-white mb-3" style="width: 100%;">

                    <% if pack.image.attached? %>
                        <%= image_tag(pack.image)  %>
                    <% else %>
                        <%= image_tag "cover1.jpeg", alt: "Placeholder" %>                       
                    <% end %>

                    <div class="card-body">
                        <h5 class="card-title"><%= pack.name %></h5>
                        <h6 class="card-subtitle"><%= @category.find(pack.category_id).name %></h6>
                        <p class="card-text"><%= pack.description %></p>
                        <%# Button leads to packs#show %>
                        <%= link_to 'Details', pack_path(pack), method: :get, class:"btn btn-light" %>
                    </div>
                </div>
            </div>
        <% end %>

    </div><br>

</div>
